@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-success text-white text-center">
                <h3>Lector de archivos Excel</h3>
            </div>

            <div class="card-body bg-dark">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card text-center">
                            <div class="card-header text-center">
                                <h5>Cargar archivo</h5>
                            </div>
                            @using (Html.BeginForm("Datos", "Excel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            { 
                             <div class="card-body">
                                     <input type="file" accept="application/vnd.ms-excel.12" name="archivo" />
                                <div class="form-group text-center">
                                    <button type="submit" class="mt-3 btn btn-success">
                                        <i class="fab fa-readme"></i>
                                        Leer
                                    </button>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

